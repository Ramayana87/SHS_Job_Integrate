  },

  "JobSettings": {
    "CronExpression": "0 */15 * * * *",
    "BatchSize": 1000,
    "EnableJob": true,
    "ProcedureName": "SHS_Job_ImportNirData"
  },

  "NirSettings": {
    "HeaderRow": 2,
    "DataStartRow": 3,
    "FormulaGroup": "F04"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-. txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
