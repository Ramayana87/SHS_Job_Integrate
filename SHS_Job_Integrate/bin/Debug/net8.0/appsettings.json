  "FileTransfer": {
    "Mode": "SMB", // SFTP | SMB
    "LocalTempPath": "./temp",
    "FilePattern": "*.xlsx;*.xls;*.csv",

    "Archive": {
      "ProcessedPath": "archive/processed",
      "ErrorPath": "archive/error",
      "BackupPath": "archive/backup",
