    "Sftp": {
      "Host": "sftp.server.com",
      "Port": 22,
      "Username": "sftp_user",
      "Password": "sftp_password",
      "PrivateKeyPath": "",
      "RemotePath": "/data/excel"
    },

    "Smb": {
      "Host": "\\\\172.16.8.37\\apzon",
      "Domain": "apz",
      "Username": "quandn",
      "Password": "admin@123",
      "RemotePath": "data/SHS Excel"
